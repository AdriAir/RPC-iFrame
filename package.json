{
    "name": "iframe-connector",
    "version": "0.2.0",
    "description": "Modern JS/TS library for RPC-style communication between parent and iframe",
    "license": "MIT",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "type": "module",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": {
                "import": "./dist/index.d.ts",
                "require": "./dist/index.d.cts"
            },
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "keywords": [
        "iframe",
        "rpc",
        "postmessage",
        "typescript",
        "javascript",
        "browser",
        "cross-window",
        "ipc",
        "frontend"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts && cpx \"dist/**/*\" examples/dist",
        "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist examples/dist",
        "serve": "serve examples/",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AdriAir/iFrameConnector.git"
    },
    "bugs": {
        "url": "https://github.com/AdriAir/iFrameConnector/issues"
    },
    "homepage": "https://github.com/AdriAir/iFrameConnector#readme",
    "devDependencies": {
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/ui": "^4.0.18",
        "cpx": "^1.5.0",
        "happy-dom": "^20.5.0",
        "rimraf": "^6.1.2",
        "serve": "^14.2.5",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    }
}
